<Window x:Class="WorkTimeTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Work Time Tracker"
        Height="450" Width="700">

    <DockPanel Margin="10">
        <StackPanel DockPanel.Dock="Top" Orientation="Vertical">
            <TextBlock Text="{Binding CurrentTime}"
                       FontSize="22"
                       FontWeight="Bold"
                       Margin="0,0,0,4"/>
            <TextBlock Text="{Binding TotalTimeFormatted}"
                       FontSize="18"
                       Margin="0,0,0,8"/>
            <Button Content="Add Task"
                    Command="{Binding AddTaskCommand}"
                    Width="120"
                    Margin="0,0,0,10"/>
        </StackPanel>

        <DataGrid ItemsSource="{Binding Tasks}"
                  AutoGenerateColumns="False"
                  Margin="0,10,0,0"
                  RowHeight="36"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False">
            <DataGrid.Resources>
                <!-- Remove blue selection highlight -->
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent"/>
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black"/>

                <!-- Remove black focus border around current cell -->
                <Style TargetType="DataGridCell">
                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                </Style>

                <!-- Remove button focus visuals as well -->
                <Style TargetType="Button">
                    <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                </Style>
            </DataGrid.Resources>
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Style.Triggers>
                        <!-- Green highlight for running task -->
                        <DataTrigger Binding="{Binding IsRunning}" Value="True">
                            <Setter Property="Background" Value="#AAE6FFCC"/>
                        </DataTrigger>

                        <!-- Red pulse for just stopped -->
                        <DataTrigger Binding="{Binding JustStopped}" Value="True">
                            <Setter Property="Background" Value="#FFFFB3B3"/>
                            <Setter Property="Opacity" Value="1.0"/>
                        </DataTrigger>
                    </Style.Triggers>

                    <!-- Fade transition animation for row background -->
                    <Style.Resources>
                        <Storyboard x:Key="FadeOutStoryboard">
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             From="1.0" To="1.0"
                                             Duration="0:0:0.2"/>
                        </Storyboard>
                    </Style.Resources>
                </Style>
            </DataGrid.RowStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Task"
                                    Binding="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    Width="*"/>

                <DataGridTextColumn Header="Elapsed"
                                    Binding="{Binding ElapsedFormatted}"
                                    Width="120"
                                    IsReadOnly="True"/>

                <DataGridTemplateColumn Header="Controls" Width="200" IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Content="Start"
                                        Command="{Binding StartCommand}"
                                        Width="60" Margin="2"/>
                                <Button Content="Stop"
                                        Command="{Binding StopCommand}"
                                        Width="60" Margin="2"/>
                                <Button Content="X"
                                        Command="{Binding DataContext.RemoveTaskCommand,
                                                  RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        Width="30" Margin="2"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
