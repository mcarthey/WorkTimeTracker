<Window x:Class="WorkTimeTracker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Work Time Tracker"
        Height="500" Width="780"
        FontFamily="Segoe UI"
        FontSize="13"
        Background="#F8F9FB">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>

    <DockPanel Margin="20">

        <!-- ====== Shared styles/resources ====== -->
        <DockPanel.Resources>
            <!-- Remove blue selection highlight -->
            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="Transparent"/>
            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="Black"/>

            <Style TargetType="DataGridCell">
                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="BorderBrush" Value="Transparent"/>
            </Style>

            <!-- Rounded button template -->
            <Style TargetType="Button">
                <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Padding" Value="6,2"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="root"
                                    CornerRadius="3"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  Margin="2"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="root" Property="Opacity" Value="0.85"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="root" Property="Opacity" Value="0.6"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="Content" Value="Start">
                        <Setter Property="Background" Value="#44C767"/>
                        <Setter Property="BorderBrush" Value="#3AAA59"/>
                    </Trigger>
                    <Trigger Property="Content" Value="Stop">
                        <Setter Property="Background" Value="#E74C3C"/>
                        <Setter Property="BorderBrush" Value="#C84133"/>
                    </Trigger>
                    <Trigger Property="Content" Value="➕ Add Task">
                        <Setter Property="Background" Value="#3C91E6"/>
                        <Setter Property="BorderBrush" Value="#2B6FB6"/>
                    </Trigger>
                    <Trigger Property="Content" Value="🧹 Clear Timers">
                        <Setter Property="Background" Value="#8C8CF8"/>
                        <Setter Property="BorderBrush" Value="#6E6EE0"/>
                    </Trigger>
                    <Trigger Property="Content" Value="💾 Save">
                        <Setter Property="Background" Value="#4CAF50"/>
                        <Setter Property="BorderBrush" Value="#3E9141"/>
                    </Trigger>
                    <Trigger Property="Content" Value="X">
                        <Setter Property="Background" Value="#999999"/>
                        <Setter Property="BorderBrush" Value="#7A7A7A"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- Column header style -->
            <Style TargetType="DataGridColumnHeader">
                <Setter Property="Background" Value="#F3F3F3"/>
                <Setter Property="Foreground" Value="#444"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="BorderBrush" Value="#DDD"/>
                <Setter Property="Padding" Value="6,3"/>
                <Setter Property="HorizontalContentAlignment" Value="Left"/>
            </Style>
        </DockPanel.Resources>

        <!-- ====== Header area ====== -->
        <Grid DockPanel.Dock="Top" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Date / Time / Total -->
            <StackPanel Orientation="Vertical" Grid.Column="0">
                <TextBlock Text="{Binding CurrentDate}"
                   FontSize="20"
                   FontWeight="SemiBold"
                   Foreground="#333"
                   Margin="0,0,0,2"/>
                <TextBlock Text="{Binding CurrentTime}"
                   FontSize="24"
                   FontWeight="SemiBold"
                   Foreground="#444"
                   Margin="0,0,0,4"/>
                <TextBlock Text="{Binding TotalTimeFormatted}"
                   FontSize="16"
                   Foreground="#666"/>
            </StackPanel>

            <!-- Toolbar and notification in right column -->
            <Grid Grid.Column="1"
      HorizontalAlignment="Right"
      VerticalAlignment="Center"
      Margin="10,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <!-- Let notification row size to content -->
                </Grid.RowDefinitions>

                <!-- Buttons row -->
                <StackPanel Orientation="Horizontal" Grid.Row="0">
                    <Button Content="➕ Add Task"
                Command="{Binding AddTaskCommand}"
                FontWeight="Bold"
                FontSize="14"
                Width="120"
                Padding="6"
                Margin="0,0,8,0"/>
                    <Button Content="🧹 Clear Timers"
                Command="{Binding ClearTimersCommand}"
                FontWeight="Bold"
                FontSize="14"
                Width="140"
                Padding="6"
                Margin="0,0,8,0"/>
                    <Button Content="💾 Save"
                Command="{Binding SaveDataCommand}"
                FontWeight="Bold"
                FontSize="14"
                Width="90"
                Padding="6"/>
                </StackPanel>

                <!-- Notification row (always reserves space) -->
                <Border x:Name="NotificationBorder"
        Grid.Row="1"
        MinHeight="40"
        Padding="10"
        Margin="0,8,0,0">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="1"/>
                            <Setter Property="CornerRadius" Value="4"/>
                            <Style.Triggers>
                                <!-- Success -->
                                <DataTrigger Binding="{Binding NotificationType}" Value="Success">
                                    <Setter Property="Background" Value="#E6F4EA"/>
                                    <Setter Property="BorderBrush" Value="#4CAF50"/>
                                </DataTrigger>
                                <!-- Error -->
                                <DataTrigger Binding="{Binding NotificationType}" Value="Error">
                                    <Setter Property="Background" Value="#FDECEA"/>
                                    <Setter Property="BorderBrush" Value="#F44336"/>
                                </DataTrigger>
                                <!-- Default info -->
                                <DataTrigger Binding="{Binding NotificationVisible}" Value="True">
                                    <Setter Property="Background" Value="#FFFBEA"/>
                                    <Setter Property="BorderBrush" Value="#FFD700"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="8,0,0,0">
                        <TextBlock Text="{Binding NotificationMessage}"
                   Foreground="#333"
                   FontWeight="SemiBold"
                   FontSize="14"
                   VerticalAlignment="Center"
                   Visibility="{Binding NotificationVisible, Converter={StaticResource BooleanToVisibilityConverter}}"
                   Margin="0,0,16,0"/>

                        <!-- Confirm Button -->
                        <Button ToolTip="Confirm"
                Command="{Binding ConfirmCommand}"
                Visibility="{Binding IsConfirming, Converter={StaticResource BooleanToVisibilityConverter}}"
                Padding="10,6"
                Margin="0,0,8,0"
                FontSize="14"
                FontWeight="Bold"
                Foreground="White"
                Cursor="Hand"
                Background="#4CAF50"
                BorderBrush="#3E9141"
                BorderThickness="1"
                Width="80">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="bd"
                            CornerRadius="4"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1"
                            SnapsToDevicePixels="True">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="bd" Property="Background" Value="#45A049"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="bd" Property="Background" Value="#3D8B40"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                            <TextBlock Text="✓" FontSize="16" FontWeight="Bold"/>
                        </Button>

                        <!-- Cancel Button -->
                        <Button ToolTip="Cancel"
                Command="{Binding CancelCommand}"
                Visibility="{Binding IsConfirming, Converter={StaticResource BooleanToVisibilityConverter}}"
                Padding="10,6"
                FontSize="14"
                FontWeight="Bold"
                Foreground="White"
                Cursor="Hand"
                Background="#F44336"
                BorderBrush="#D32F2F"
                BorderThickness="1"
                Width="80">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="bd"
                            CornerRadius="4"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1"
                            SnapsToDevicePixels="True">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="bd" Property="Background" Value="#E53935"/>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="bd" Property="Background" Value="#C62828"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                            <TextBlock Text="✕" FontSize="16" FontWeight="Bold"/>
                        </Button>
                    </StackPanel>
                </Border>


            </Grid>

        </Grid>


        <!-- ====== DataGrid Container ====== -->
        <Border CornerRadius="6"
                Background="White"
                BorderBrush="#DDD"
                BorderThickness="1"
                SnapsToDevicePixels="True"
                Padding="0">

            <DataGrid ItemsSource="{Binding Tasks}"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      HeadersVisibility="Column"
                      GridLinesVisibility="Horizontal"
                      RowHeight="42"
                      Background="Transparent"
                      BorderThickness="0"
                      HorizontalGridLinesBrush="#EEE"
                      Margin="0"
                      AlternationCount="2"
                      SelectionMode="Single"
                      SelectionUnit="FullRow"
                      SelectedItem="{x:Null}"
                      EnableRowVirtualization="False"
                      EnableColumnVirtualization="False">

                <!-- Row uses VM-owned brush so animations are stable -->
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="{Binding RowBrush}"/>
                        <Style.Triggers>
                            <!-- Optional slight alternation visual with opacity -->
                            <Trigger Property="AlternationIndex" Value="1">
                                <Setter Property="Opacity" Value="0.96"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>

                <!-- Columns -->
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Task"
                                        Binding="{Binding Description, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                        Width="*"/>
                    <DataGridTextColumn Header="Elapsed"
                                        Binding="{Binding ElapsedFormatted}"
                                        Width="120"
                                        IsReadOnly="True"/>

                    <DataGridTemplateColumn Header="Controls" Width="210" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="Start"
                                            Command="{Binding StartCommand}"
                                            Width="60" Margin="3"/>
                                    <Button Content="Stop"
                                            Command="{Binding StopCommand}"
                                            Width="60" Margin="3"/>
                                    <Button Content="X"
                                            Command="{Binding DataContext.RemoveTaskCommand,
                                                              RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Width="30" Margin="3"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </DockPanel>
</Window>
